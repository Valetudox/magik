{
  "menu": [
    {
      "title": "Architect",
      "icon": "mdi-drawing",
      "items": [
        { "ui": "UI_DECISION", "icon": "mdi-file-document-multiple" },
        { "ui": "UI_SPECIFICATION", "icon": "mdi-file-document-outline" }
      ]
    },
    {
      "title": "Tools",
      "icon": "mdi-tools",
      "items": [
        { "ui": "UI_AUDIO", "icon": "mdi-microphone" },
        { "ui": "UI_TABLEDOCUMENT", "icon": "mdi-table-large" }
      ]
    }
  ],
  "services": {
    "BACKEND_DECISION": {
      "dev": 4000,
      "prod": 3000,
      "apiRoute": "/api/decisions",
      "containerName": "backend-decision",
      "backendMode": "custom",
      "dataFolders": []
    },
    "BACKEND_SOCKET": {
      "dev": 4001,
      "prod": 3001,
      "apiRoute": "/socket.io/",
      "containerName": "backend-socket",
      "backendMode": "custom",
      "dataFolders": []
    },
    "BACKEND_AUDIO": {
      "dev": 4002,
      "prod": 3002,
      "apiRoute": "/api/recordings",
      "containerName": "backend-audio",
      "backendMode": "endpoint-only",
      "dataFolders": ["/data/recordings"]
    },
    "BACKEND_SPECIFICATION": {
      "dev": 4003,
      "prod": 3003,
      "apiRoute": "/api/specifications",
      "containerName": "backend-specification",
      "backendMode": "endpoint-only",
      "dataFolders": []
    },
    "BACKEND_TABLEDOCUMENT": {
      "dev": 4004,
      "prod": 3004,
      "apiRoute": "/api/table-documents",
      "containerName": "backend-tabledocument",
      "backendMode": "custom",
      "dataFolders": ["/data/table-documents"]
    }
  },
  "uis": {
    "UI_DECISION": {
      "name": "Decisions",
      "basePath": "/decisions",
      "containerName": "ui-decision",
      "dependsOn": ["backend-decision", "backend-socket"],
      "port": 80,
      "openapiSpec": "specs/domains/decision/openapi.yaml",
      "vitePort": 5173
    },
    "UI_AUDIO": {
      "name": "Audio",
      "basePath": "/audio",
      "containerName": "ui-audio",
      "dependsOn": ["backend-audio", "backend-socket"],
      "port": 80,
      "openapiSpec": "specs/domains/audio/openapi.yaml",
      "vitePort": 5174,
      "needsSpecs": true
    },
    "UI_SPECIFICATION": {
      "name": "Specifications",
      "basePath": "/specifications",
      "containerName": "ui-specification",
      "dependsOn": ["backend-specification", "backend-socket"],
      "port": 80,
      "openapiSpec": "specs/domains/specification/openapi.yaml",
      "vitePort": 5176
    },
    "UI_TABLEDOCUMENT": {
      "name": "Table Documents",
      "basePath": "/table-documents",
      "containerName": "ui-tabledocument",
      "dependsOn": ["backend-tabledocument", "backend-socket"],
      "port": 80,
      "openapiSpec": "specs/domains/tabledocument/openapi.yaml",
      "vitePort": 5175
    }
  }
}
