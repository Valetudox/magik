{
  "name": "magik",
  "version": "1.0.0",
  "private": true,
  "description": "Audio recording and transcription tool with Obsidian integration",
  "main": "apps/cli-audio/src/index.ts",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "config"
  ],
  "bin": {
    "magik": "./apps/cli-audio/src/index.ts"
  },
  "scripts": {
    "generate": "node scripts/generate.js",
    "generate:backend-service": "hygen backend-service new",
    "generate:ui-service": "hygen ui-service new",
    "generate:api-action": "hygen api-action new",
    "generate:from-openapi": "bun run scripts/generators/generate-from-openapi.ts generate",
    "add:action": "bun run scripts/generators/add-action.ts",
    "start": "bun run apps/cli-audio/src/index.ts",
    "dev": "./scripts/dev.sh",
    "lint": "bun ./scripts/lints/lint-all.ts lint",
    "lint:ci": "bun ./scripts/lints/lint-all.ts lint --ci",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:ws": "for dir in apps/* packages/*; do [ -f \"$dir/package.json\" ] && (cd \"$dir\" && bun run format 2>/dev/null || true); done",
    "format:ws:check": "for dir in apps/* packages/*; do [ -f \"$dir/package.json\" ] && (cd \"$dir\" && bun run format:check 2>/dev/null || true); done",
    "test:e2e": "bun ./scripts/e2e/e2e-all.ts test",
    "test:e2e:list": "bun ./scripts/e2e/e2e-all.ts list",
    "test": "bun run test:e2e",
    "api-documentation": "./scripts/serve-api-docs.sh",
    "generate:clients": "bun run --filter='@magik/backend-audio-client' generate && bun run --filter='@magik/backend-socket-client' generate",
    "docker:build": "./scripts/docker/build-docker.sh",
    "docker:deploy": "./scripts/docker/deploy-docker.sh",
    "docker:refresh": "./scripts/docker/refresh-docker.sh",
    "docker:start": "./scripts/docker/start-docker.sh",
    "docker:stop": "./scripts/docker/stop-docker.sh",
    "docker:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:ps": "docker compose -f docker-compose.prod.yml ps",
    "systemd:install": "./scripts/install-systemd-service.sh",
    "systemd:status": "systemctl --user status magik"
  },
  "keywords": [
    "audio",
    "recording",
    "transcription",
    "obsidian"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@e2b/code-interpreter": "^2.3.3",
    "@speechmatics/real-time-client": "^8.2.0",
    "@types/inquirer": "^9.0.9",
    "axios": "^1.13.2",
    "change-case": "^5.4.4",
    "commander": "^14.0.2",
    "form-data": "^4.0.5",
    "inquirer": "^12.11.0",
    "marked": "^17.0.1",
    "mic": "^2.1.2",
    "wav": "^1.0.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@hey-api/openapi-ts": "^0.88.0",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "concurrently": "^9.2.1",
    "ejs": "^3.1.10",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "hygen": "^6.2.11",
    "p-all": "^5.0.1",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.48.1",
    "vue-eslint-parser": "^10.2.0"
  }
}
